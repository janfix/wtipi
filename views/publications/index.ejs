<!DOCTYPE html>
<html lang="en">
<%- include('../partials/head.ejs') %>

  <body>
    <%- include('../partials/nav.ejs') %>


      <div class="addEntry">
        <button onclick=" window.location.href = '/publications/create'" class="addPublication">Create a
          Publication</button></a>
      </div>

      <div class="publications content">

        <h1>Publications list</h1>
        <div class="filters"> Filters :
          <div class="afilter">
            <label for="state">State</label>
            <select name="state" id="state">
              <option value="all">All</option>
              <option value="soon">Coming soon</option>
              <option value="inProgress">In progress</option>
              <option value="finished">Finished</option>
            </select>
          </div>
          <div class="afilter">
            <label for="subject">Subject</label>
            <select name="subject" id="subject">
              <option value="all">All</option>
              <option value="en">English</option>
              <option value="fr">French</option>
              <option value="sp">Spanish</option>
              <option value="math">Mathematics</option>
              <option value="phy">Physics</option>
            </select>
          </div>
          <div class="afilter">
            <label for="level">Level</label>
            <select name="level" id="level">
              <option value="all">All</option>
              <option value="A1">A1</option>
              <option value="A2">A2</option>
              <option value="A3">A3</option>
              <option value="A4">A4</option>
              <option value="A5">A5</option>
            </select>
          </div>
          <div class="afilter">
            <label for="Gtype">Group Type</label>
            <select name="Gtype" id="Gtype">
              <option value="all">All</option>
              <option value="G1">G1</option>
              <option value="G2">G2</option>
              <option value="G3">G3</option>
              <option value="G4">G4</option>
              <option value="G5">G5</option>
            </select>
          </div>
        </div>

        <% if(publications.length> 0){ %> <% publications.forEach(publication=> { %>
            <a class="single" href="/publications/<%= publication._id %>">
              <h3 class="title">
                <%= publication.title %>
              </h3>
              <p class="snippet">
                <%= publication.snippet %>
              </p>
            </a>
            <% }) %>
              <% } else { %>
                <p>No publications to display yet!</p>
                <% } %>

      </div>

      <%- include('../partials/footer.ejs') %>
  </body>

</html>