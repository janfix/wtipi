<html lang="en">
  <%- include("../partials/head.ejs") %>

  <body>
    <%- include("../partials/nav.ejs") %>

    <div class="details content">
      <h2><%= group.title %></h2>
      
      
      <div class="content">
        <p><%= group.groupName %></p>
        <p><%= group.description %></p>
        <p><%= group.createdAt %></p>
        
        <p><%= group.body %></p>
      </div>

      <!-- Tool Bar -->
      <% if(user){ %> <% if(user._id == group.creator){ %>
      <a class="delete actionBT" data-doc="<%= group._id %>">
        <img src="/trashcan.svg" title="Remove Assessment" alt="Delete icon" />
      </a>
      <a class="edit actionBT" data-doc="<%= group._id %>">
        <img width="25px" src="/btEdit.png" title="Edit test information" alt="Edit Test info" />
      </a>
      <a class="start actionBT" data-doc="<%= group._id %>">
        <img width="25px" src="/btStart.png" title="Start test" alt="Start Test" />
      </a>
      <% }else{%><div class="delete">Impossible</div> 
      <%}%> %> <% } %>
      
    </div>

    <%- include("../partials/footer.ejs") %>

    <script>
      const trashcan = document.querySelector("a.delete");

      trashcan.addEventListener("click", (e) => {
        const endpoint = `/groups/${trashcan.dataset.doc}`;

        fetch(endpoint, { method: "DELETE" })
          .then((response) => response.json())
          .then((data) => (window.location.href = data.redirect))
          .catch((err) => console.log(err));
      });
    </script>
  </body>
</html>
